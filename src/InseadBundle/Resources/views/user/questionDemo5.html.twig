{% extends '@Insead/user/layout.html.twig' %}


{% block progress %}
<div id="q1">
    <div class="progress">
        <div class="determinate" style="width: 100%"></div>
    </div>
    {% endblock %}
    {% block body %}
        <div class="row body_questions z-depth-3">
            <div class="col s12">
                <h2>{{ question }}</h2>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col s10 offset-s1">
                        <h2>{{ form_widget(form.choices) }}</h2>
                    </div>
                </div>
            </div>
            <div class="row number">
                <div class="col s3">
                      <a class="btn-floating btn-large waves-effect waves-light choice_number">0</a>
                </div>
                    <div class="col s3">
                            <a class="btn-floating btn-large waves-effect waves-light choice_number">1</a>
                    </div>
                    <div class="col s3">
                            <a class="btn-floating btn-large waves-effect waves-light choice_number">2</a>
                    </div>
                    <div class="col s3">
                            <a class="btn-floating btn-large waves-effect waves-light choice_number">3</a>
                    </div>
                    <div class="col s2 offset-s1">
                            <a class="btn-floating btn-large waves-effect waves-light choice_number">4</a>
                    </div>
                    <div class="col s2 offset-s1">
                            <a class="btn-floating btn-large waves-effect waves-light choice_number">5</a>
                    </div>
                    <div class="col s2 offset-s1">
                            <a class="btn-floating btn-large waves-effect waves-light choice_number">6</a>
                    </div>
                    <div class="col s2 offset-s1">
                            <a class="btn-floating btn-large waves-effect waves-light choice_number">7</a>
                    </div>
                    <div class="col s3 offset-s2">
                            <a class="btn-floating btn-large waves-effect waves-light choice_number">8</a>
                    </div>
                    <div class="col s3 offset-s2">
                            <a class="btn-floating btn-large waves-effect waves-light choice_number">9</a>
                    </div>
                    <div class="col s3 offset-s2">
                            <a class="btn-floating btn-large waves-effect waves-light choice_number">10+</a>
                    </div>
        </div>
    {% endblock %}

    {% block footer %}
    <div class="row footerDemo z-depth-3">
        <div class="col s4 offset-s1 center-align">
            <a href="{{ path('insead_questionDemo4') }}">
                <button class="btn">Return
                </button>
            </a>
        </div>
        <div class="col s4 offset-s1 center-align">
          <a href="{{ path('fos_user_registration_register') }}">
            <button class="btn pulse" type="submit" value="Next">Next</button>
            </a>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('select').material_select();
        });
    </script>

{% endblock %}