{% extends '@Insead/user/layout.html.twig' %}


{% block progress %}
<div id="q1">
    <div class="progress">
        <div class="determinate" style="width: 20%"></div>
    </div>
{% endblock %}
{% block body %}
        <div class="row body_questions z-depth-3">
            <div class="col s10 offset-s1">
                <h2>{{ question }}</h2>
                <div class="row button_choice">
                    <div class="col s12" onclick="">
                        <button onclick="" type="button" class="btn waves-effect answer">Asian
                        </button>
                    </div>
                </div>
                <div class="row button_choice">
                    <div class="col s12">
                       <button type="button" class="btn waves-effect answer">Black
                       </button>
                    </div>
                </div>
                <div class="row button_choice">
                    <div class="col s12 ">
                        <button type="button" class="btn waves-effect answer">Native American
                        </button>
                    </div>
                </div>
                <div class="row button_choice">
                    <div class="col s12 ">
                        <button type="button" class="btn waves-effect answer">African-American
                        </button>
                    </div>
                </div>
                <div class="row button_choice">
                    <div class="col s12 ">
                        <button type="button" class="btn waves-effect answer">Pacific Islander
                        </button>
                    </div>
                </div>
                <div class="row button_choice">
                    <div class="col s12 ">
                        <button type="button" class="btn waves-effect answer">White
                        </button>
                    </div>
                </div>
                <div class="row button_choice">
                    <div class="col s12 ">
                        <button type="button" class="btn waves-effect answer">Other race
                        </button>
                    </div>
                </div>
                <div class="row button_choice">
                    <div class="col s12 ">
                        <button type="button" class="btn waves-effect answer">Prefer not to answer
                        </button>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}

{% block footer %}
        <div class="row footerDemo z-depth-3">
                <div class="col s4 offset-s1 center-align">
                    <a href="{{ path('insead_rules') }}">
                        <button class="btn ">Return
                        </button>
                    </a>
                </div>
                    <div class="col s4 offset-s1 center-align">
                        <a href="{{ path('insead_questionDemo2') }}">  <button class="btn pulse" type="submit" value="Next">Next</button></a>
                    </div>
        </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('select').material_select();
        });
    </script>

{% endblock %}