{% extends 'base.html.twig' %}

{% block body %}
<div id="listad">
    <div class="row headerAd">
        <div class="col s12 z-depth-3">
            <div class="col s12">
                <h1>Ad list</h1>
            </div>
        </div>
    </div>
    <div class="row">
        {% for ad in ads %}
        <a href="#">
            <div class="col s10 offset-s1 ">
                <div class="row z-depth-4 adBox">
                    <div class="col s3 offset-s2">
                        <h2>{{ ad.name }}</h2>
                    </div>
                    <div class="col s3 offset-s2">
                        <h2>{{ ad.parameters.value }}</h2>
                    </div>
                </div>
            </div>
        </a>
        {% endfor %}
    </div>
    <div class="row z-depth-5 footerAd">
        <div class="col s12">
            <div class="row">
                <div class="col s3 offset-s1">
                    <i class="material-icons">settings</i>
                </div>
                <div class="col s4 offset-s3">
                    <p>500 Points</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}